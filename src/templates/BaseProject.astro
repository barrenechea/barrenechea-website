---
import type { CollectionEntry } from 'astro:content';

import { AppConfig } from '~/config';
import ProjectPost from '~/partials/ProjectPost.astro';
import Base from '~/templates/Base.astro';

interface Props {
  lang?: string;
  project: CollectionEntry<"projects">;
}

const { lang = 'en', project } = Astro.props;
const title = `${project.data.title} - ${AppConfig.siteName}`;
---

<Base head={{ title, description: project.data.description, lang }}>
  <ProjectPost {project}>
    <slot />
  </ProjectPost>
</Base>
