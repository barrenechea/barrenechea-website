---
import type { CollectionEntry } from 'astro:content';

import { AppConfig } from '~/config';
import BlogPost from '~/partials/BlogPost.astro';
import Base from '~/templates/Base.astro';

interface Props {
  lang?: string;
  post: CollectionEntry<'posts'>;
}

const { lang = 'en', post } = Astro.props;
const title = `${post.data.title} - ${AppConfig.siteName}`;
---

<Base head={{ title, description: post.data.description, ogOverride: post.data.ogOverride, lang }}>
  <BlogPost {post}>
    <slot />
  </BlogPost>
</Base>
