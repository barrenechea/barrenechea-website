---
import { getCollection } from 'astro:content';

import BasePost from "@/templates/BasePost.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection('post');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---
<BasePost title={entry.data.title} description={entry.data.description} imgSrc={entry.data.img} imgAlt={entry.data.imgAlt}>
  <Content />
</BasePost>
