{
  "name": "barrenechea-website",
  "version": "1.0.0",
  "author": "Sebastian Barrenechea (https://github.com/barrenechea)",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "lint": "eslint . && astro check",
    "format": "prettier --log-level warn --write .",
    "prepare": "husky",
    "i18n:generate": "npm run format && node --experimental-strip-types --no-warnings tools/translateContent.ts en && npm run format && node --experimental-strip-types --no-warnings tools/translateContent.ts && npm run format"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.{js,cjs,mjs,ts,astro}": [
      "eslint --fix",
      "astro check"
    ]
  },
  "dependencies": {
    "@astro-community/astro-embed-youtube": "^0.5.7",
    "@astrojs/check": "^0.9.5",
    "@astrojs/mdx": "^4.3.9",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/rss": "^4.0.13",
    "@astrojs/sitemap": "^3.6.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@fontsource/work-sans": "^5.2.8",
    "@iconify-icons/circle-flags": "^1.2.41",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.16",
    "astro": "^5.15.2",
    "astro-og-canvas": "^0.7.2",
    "astro-robots-txt": "^1.0.0",
    "eslint": "9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.4.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "github-fork-ribbon-css": "^0.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "openai": "^6.7.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.16"
  },
  "packageManager": "npm@11.6.2",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "typescript-eslint": "^8.46.2"
  }
}
